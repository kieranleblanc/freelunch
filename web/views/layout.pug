include mixins

doctype html
html
  head
    title Free Lunch
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js')
    script(src='/javascripts/scripts.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
  body
     block banner
          div.curtain(id="curtain", onclick="didSelectCurtain()", hidden)
          div.container-fluid.bg-primary
                div.row.banner
                     div.col-sm-1
                     div.col-xs-1
                          a(href="/") 
                              img.icon(src="/images/icon.png")
                     div.col-sm-8
                     unless authenticated
                          div.col-sm-1.bar-button
                               a.bar-button-text(href="/signup") Sign up 
                          div.col-sm-1.bar-button
                               a.bar-button-text(
                                    href="javascript: void(0)",
                                    onclick="didSelectLogin()"
                                    ) Log in
                     else 
                          div.col-sm-1
                          div.col-sm-1.bar-button
                               a.bar-button-text(
                                    href="javascript: void(0)",
                                    onclick="didSelectPost()"
                                    ) Post                     
     block content
     block login
          div.jumbotron.form.overlay(id="login", hidden)
               form.form-horizontal
                    input.span3.signin(id="email", type="text", name="email", placeholder="Email address")
                    input.span3.signin(id="password", type="password", name="password", placeholder="Password")
                    +selector
     block post
          div.jumbotron.form.lay(id="post", hidden)
               form.form-horizontal
                    input.span3.signin.top(id="title", type="text", name="title", placeholder="Title (e.g. 'cheese sandwiches')")
                    input.span3.signin(id="description", type="text", name="description", placeholder="Description")
                    input.span3.signin(id="postcode", type="text", name="postcode", placeholder="Postcode")
     block footer
          div.footer
               hr
               p.footer
               | Free Lunch is a non-profit project. You can contribute on  
               | Github #[a(href="http://www.github.com/samziz/freelunch") here].
